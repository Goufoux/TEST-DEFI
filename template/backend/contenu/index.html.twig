{% extends "backend/base.html.twig" %}

{% block body %}
    <h1 class="col-lg-10 col-md-10 col-sm-12 mx-auto h3 my-3">
        <i class="fas fa-list"></i>
        Liste des contenus
        <div class="float-right">
            <a href="/admin/contenu/new" class="btn btn-primary btn-sm">
                <i class="fas fa-plus-circle"></i>
                Nouveau contenu
            </a>
        </div>
    </h1>
    {% if contenus is empty %}
        <div class="alert alert-info col-lg-8 col-md-10 col-sm-12 mx-auto">
            <h5 class="alert-heading">
                <i class="fas fa-info-circle"></i>
                Aucun contenu
            </h5>
            <div class="alert-body">
                <a href="/admin/contenu/new" class="btn btn-success">
                    <i class="fas fa-plus"></i>
                    Ajouter
                </a>
            </div>
        </div>
    {% else %}
    <div class="col-lg-10 col-md-10 col-sm-12 mx-auto">
        <table class="table table-striped table-dark rounded text-white">
            <thead>
                <th>#</th>
                <th>Titre</th>
                <th>Créé le</th>
                <th></th>
            </thead>
            <tbody>
                {% for contenu in contenus %}
                    <tr>
                        <td>{{ contenu.id }}</td>
                        <td>{{ contenu.title|raw }}</td>
                        <td>{{ contenu.createdAt|date('d/m/y') }}</td>
                        <td>
                            <a href="/contenu/{{ contenu.id }}/{{ contenu.slug }}" class="mx-1">
                                <i class="fas fa-eye text-white"></i>
                            </a>
                            <a href="/admin/contenu/update/{{ contenu.id }}" class="mx-1">
                                <i class="fas fa-pen text-white"></i>
                            </a>
                            <a href="/admin/contenu/remove/{{ contenu.id }}" class="mx-1">
                                <i class="fas fa-trash text-white"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    {% endif %}
{% endblock body %}