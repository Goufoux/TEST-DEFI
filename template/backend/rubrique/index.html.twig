{% extends "backend/base.html.twig" %}

{% block body %}
<h1 class="h3 mb-3 col-lg-10 col-md-10 col-sm-10 mx-auto my-3">
    <i class="fas fa-list"></i>
    Gestion des rubriques
    <div class="float-right">
        <a href="/admin/rubrique/new" class="btn btn-primary btn-sm">
            <i class="fas fa-plus-circle"></i>
            Ajouter une rubrique
        </a>
    </div>
</h1>
{% if rubriques is empty %}
<div class="alert alert-info col-lg-6 col-md-8 col-sm-10 mx-auto">
    <h5 class="alert-heading">
        <i class="fas fa-info-circle"></i>
        Aucune rubrique
    </h5>
    <a href="/admin/rubrique/new" class="btn btn-info">
        <i class="fas fa-plus"></i>
        Ajouter
    </a>
</div>
{% else %}
<div class="col-lg-10 col-md-10 col-sm-12 mx-auto">
    <h2 class="h3">Marché</h2>
    <table class="table rounded table-dark text-white table-striped">
        <thead>
            <th>#</th>
            <th>Nom</th>
            <th></th>
        </thead>
        <tbody>
            {% for rubrique in rubriques if rubrique.type == 1 %}
                <tr>
                    <td>{{ rubrique.id }}</td>
                    <td>{{ rubrique.name }}</td>
                    <td>
                        <a href="/rubrique/{{ rubrique.slug }}">
                            <i class="fas fa-eye mx-1 text-white ico-info"></i>
                        </a>
                        <a href="/admin/rubrique/update/{{ rubrique.slug }}">
                            <i class="fas fa-pen text-white mx-1 ico-info"></i>
                        </a>
                        <a href="/admin/rubrique/remove/{{ rubrique.id }}">
                            <i class="fas fa-trash mx-1 text-white ico ico-danger"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <h2 class="h3">Produit</h2>
    <table class="table rounded table-dark text-white table-striped">
        <thead>
            <th>#</th>
            <th>Nom</th>
            <th></th>
        </thead>
        <tbody>
            {% for rubrique in rubriques if rubrique.type == 2 %}
                <tr>
                    <td>{{ rubrique.id }}</td>
                    <td>{{ rubrique.name }}</td>
                    <td>
                        <a href="/rubrique/{{ rubrique.slug }}">
                            <i class="fas fa-eye mx-1 text-white ico-info"></i>
                        </a>
                        <a href="/admin/rubrique/update/{{ rubrique.slug }}">
                            <i class="fas fa-pen text-white mx-1 ico-info"></i>
                        </a>
                        <a href="/admin/rubrique/remove/{{ rubrique.id }}">
                            <i class="fas fa-trash mx-1 text-white ico ico-danger"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <h2 class="h3">Spécialité</h2>
    <table class="table rounded table-dark text-white table-striped">
        <thead>
            <th>#</th>
            <th>Nom</th>
            <th></th>
        </thead>
        <tbody>
            {% for rubrique in rubriques if rubrique.type == 3 %}
                <tr>
                    <td>{{ rubrique.id }}</td>
                    <td>{{ rubrique.name }}</td>
                    <td>
                        <a href="/rubrique/{{ rubrique.slug }}">
                            <i class="fas fa-eye mx-1 text-white ico-info"></i>
                        </a>
                        <a href="/admin/rubrique/update/{{ rubrique.slug }}">
                            <i class="fas fa-pen text-white mx-1 ico-info"></i>
                        </a>
                        <a href="/admin/rubrique/remove/{{ rubrique.id }}">
                            <i class="fas fa-trash mx-1 text-white ico ico-danger"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endif %}
{% endblock body %}