            <a class="list-group-item list-group-item-action" href="/actualite">Actualités</a>
        </div>
    </div>
    <div class="mob-menu" data-target="marche">
        <h3 class="h5">
            Marché
            <div class="float-right mr-2">
                <i class="fas fa-chevron-down"></i>
            </div>
        </h3>
    </div>
    <div class="mob-sub-menu" id="marche">
        {% if rubriques is empty %}
        <span class="badge badge-info p-2 d-block w-25 mx-auto">
            Aucune rubrique
        </span>
        {% else %}
        <div class="list-group">
            {% for rubrique in rubriques if rubrique.type == 1 %}
                <a href="/rubrique/{{ rubrique.slug }}" class="list-group-item list-group-item-action">
                    {{ rubrique.name }}
                </a>
            {% endfor %}
            </div>
        {% endif %}
    </div>
    <div class="mob-menu" data-target="produit">
        <h3 class="h5">
            Produits
            <div class="float-right mr-2">
                <i class="fas fa-chevron-down"></i>
            </div>
        </h3>
    </div>
    <div class="mob-sub-menu" id="produit">
        {% if rubriques is empty %}
        <span class="badge badge-info p-2 d-block w-25 mx-auto">
            Aucune rubrique
        </span>
        {% else %}
        <div class="list-group">
            {% for rubrique in rubriques if rubrique.type == 2 %}
                <a href="/rubrique/{{ rubrique.slug }}" class="list-group-item list-group-item-action">
                    {{ rubrique.name }}
                </a>
            {% endfor %}
            </div>
        {% endif %}
    </div>
    <div class="mob-menu" data-target="specialite">
        <h3 class="h5">
            Spécialité
            <div class="float-right mr-2">
                <i class="fas fa-chevron-down"></i>
