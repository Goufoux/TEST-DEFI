        {% if rubriques is empty %}
        <span class="badge badge-info p-2 d-block w-25 mx-auto">
            Aucune rubrique
        </span>
        {% else %}
        <div class="list-group">
            {% for rubrique in rubriques if rubrique.type == 3 %}
                <a href="/rubrique/{{ rubrique.slug }}" class="list-group-item list-group-item-action">
                    {{ rubrique.name }}
                </a>
            {% endfor %}
            </div>
        {% endif %}
    </div>
    <a href="/contact" class="external-menu">
        <h3 class="h5">
            Contact
        </h3>
    </a>
    <a href="/contact?type=devis" class="external-menu">
