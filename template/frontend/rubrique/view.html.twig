{% extends "frontend/base.html.twig" %}
{% import "frontend/macro/macro.produits.html.twig" as _Produit %}

{% block meta_description %}
    <meta description="{{ rubrique.metaDescription }}">
{% endblock meta_description %}

{% block head_block %}
<blockquote class="h1 col-lg-8 col-12 mx-auto text-white main-title">
    <div class="row py-2">
        <div class="col-10 col-12 text-center text-lg-left offset-lg-2">
            L'Art et la Matière ®
        </div>
        <div class="h2 col-10 col-12 second-main-title text-center text-lg-left offset-lg-2">
            {{ rubrique.name|raw }}
        </div>
        <div class="brand-filters col-10 col-12 text-center text-lg-left offset-lg-2">
            {{ rubrique.tags|raw }}
        </div>
    </div>
</blockquote>
{% endblock head_block %}

{% block main_content %}
<section class="col-lg-11 col-12 mx-auto content-view-main">
    <div class="row py-3">
        <section class="col-12 content-view">
            {{ rubrique.description|raw }}
        </section>
        <section class="col-12 mt-4">
            <div class="row">
                {% set compteur = 0 %}
                {% for produit in products %}
                    {% set r = compteur / 2 %}
                    {% if r % 2 == 0 %}
                        {% set side = 'gauche' %}
                    {% else %}
                        {% set side = 'droit' %}
                    {% endif %}
                    {{ _Produit.produit(produit.product, side) }}
                    {% set compteur = compteur + 1 %}
                {% endfor %}
            </div>
        </section>
    </div>
</section>
{% endblock main_content %}